
public class Time {
	public static void main(String[] args) {
		
		System.out.println("Exercise 2.3");
		System.out.println("---------");
		
			int hour = 22;
			int minute = 57;
			int second = 32;
			
		System.out.print( (hour * 60 * 60) + (minute * 60) + (second) );
		System.out.println(" seconds have passed today");
		
		System.out.print( (24 * 60 *60) - ( (hour * 60 * 60) + (minute * 60) + (second) ) );
		System.out.println(" seconds remaining in the day");
		
			double dhour = 22.0;
			double dminute = 57.0;
			double dsecond = 32.0;
		
		System.out.print( ( (dhour * 60.0 * 60.0) + (dminute * 60.0) + (dsecond) ) / (24.0 * 60.0 * 60.0) * 100);
		System.out.println(" % of the day has passed");
		
			int hour2 = 23;
			int minute2 = 13;
			int second2 = 22;
		
		System.out.print(hour2 - hour+" hours, ");
		System.out.print( (60 - minute2) - (60 -minute)+" minutes, and ");
		System.out.println(second2 - second+" seconds have elapsed since I started working on this exercise");
		
	}
}